<% # encoding : utf-8 %>

<%= link_to root_path, 'data-turbolinks' => false do %>
    <h1>Gbg Events</h1></a>
<% end %>
<div class="row">

  <div class="small-12 large-4 columns">
    <h2>Pustervik</h2>
    <hr class="betterhr">
    <ul class="accordion" data-accordion data-allow-all-closed="true">
      <% @pustervik_events.each do |hash| %>
        <li class="accordion-item" data-accordion-item>
          <%= link_to hash[:title], '#', class: 'accordion-title' %>
          <div class="accordion-content" data-tab-content>
            <ul class="empty-ul">
              <%= raw hash[:description] %>
            </ul>
          </div>
        </li>
      <% end %>
    </div>

  <div class="small-12 large-4 columns">
    <h2>Chalmers</h2>
    <hr class="betterhr">
    <ul class="accordion" data-accordion data-allow-all-closed="true">
      <% @chalmers_events.each do |hash| %>
          <li class="accordion-item" data-accordion-item>
            <%= link_to hash[:title]&.gsub!('î¢µ', ''), '#', class: 'accordion-title' %>
            <div class="accordion-content" data-tab-content>
              <p><%= raw hash[:description][:time] %></p>
              <p><%= raw hash[:description][:text] %></p>
            </div>
          </li>
      <% end %>
    </ul>
  </div>

  <div class="small-12 large-4 columns">
    <h2>U. of Gothenburg</h2>
    <hr class="betterhr">
    <ul class="accordion" data-accordion data-allow-all-closed="true">
      <% @gu_events.each do |event| %>
          <li class="accordion-item" data-accordion-item>
            <%= link_to event.scan(/>([^>]*)>/)[1][0].chomp('</a'), '#', class: 'accordion-title' %>
            <div class="accordion-content" data-tab-content>
              <p><%= raw event %></p>
            </div>
          </li>
      <% end %>
    </ul>

  </div>
</div>
</div>
